//Task1_1  Определить  количество  цифр,  меньших  5,  используемых  при  записи натурального числа N.

$num = 20912;

$a = 10;
$b = 1;
$count = 0;

while ($num > 0) {

    $digit = $num % $a / $b;
    $num = $num - ($num % $a);
   
    $a *= 10;
    $b *= 10;

        if($digit < 5){
          $count++;
        }
}
echo 'цифр меньше 5 = '.$count;
